! load config
! xrdb -load ~/.Xdefaults
!
! to match gnome-terminal "Linux console" scheme
! foreground/background
URxvt*background: #000000
URxvt*foreground: #AAAAAA
! black
URxvt.color0  : #000000
URxvt.color8  : #555753
! red
URxvt.color1  : #CC0000
URxvt.color9  : #EF2929
! green
URxvt.color2  : #4E9A06
URxvt.color10 : #8AE234
! yellow
URxvt.color3  : #C4A000
URxvt.color11 : #FCE94F
! blue
URxvt.color4  : #3465A4
URxvt.color12 : #729FCF
! magenta
URxvt.color5  : #75507B
URxvt.color13 : #AD7FA8
! cyan
URxvt.color6  : #06989A
URxvt.color14 : #34E2E2
! white
URxvt.color7  : #D3D7CF
URxvt.color15 : #EEEEEC

! select font
! URxvt*font: xft:Monospace:pixelsize=14
URxvt*font: xft:inconsolata:pixelsize=14

! dont use a bold font
URxvt*boldFont: xft:Monospace:pixelsize=14

! fix font width
URxvt*letterSpace: -1

! perl extensions
URxvt.perl-ext-common : default,matcher
!,tabbed

! open links in Firefox
URxvt.urlLauncher     : firefox
URxvt.matcher.button  : 1

! Yankable URLs (no mouse)
URxvt.perl-ext: default
!keyboard-select
URxvt.keysym.M-u: perl:matcher:select
!URxvt.url-select.launcher: /usr/bin/xdg-open
!URxvt.url-select.underline: true


! keyboard select text
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search

! colors of tabs
!URxvt.tabbed.tabbar-fg: 8
!URxvt.tabbed.tabbar-bg: 0
!URxvt.tabbed.tab-fg: 7
!URxvt.tabbed.tab-bg: 0
!URxvt.tabbed.autohide: yes
!URxvt.tabbed.new-button: no
!URxvt.tabbed.title: yes
URxvt.colorUL: #4682B4
URxvt.url-launcher: dwb


! do not scroll with output
URxvt*scrollTtyOutput: false

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer: true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true

URxvt*cursorColor: #AAAAAA






